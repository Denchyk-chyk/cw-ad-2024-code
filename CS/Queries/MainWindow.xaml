<Window x:Class="CS.Queries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Запити" Height="370" Width="450" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="User" Grid.Column="1" Content="Username" Padding="10 2" Panel.ZIndex="1" Margin="0 -2 2 0" Click="User_Click">
            <Button.ToolTip>
                <ToolTip Content="Змінити користувача"/>
            </Button.ToolTip>
        </Button>
        <Grid x:Name="Main" Grid.Row="1" Grid.ColumnSpan="2" Margin="10 0"/>
    </Grid>
</Window>
