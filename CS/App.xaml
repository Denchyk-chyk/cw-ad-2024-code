 <Application x:Class="CS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Authorization\Window.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="DefaultButton">
            <Setter Property="Padding" Value="7"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button" x:Key="TopMarginButton" BasedOn="{StaticResource DefaultButton}">
            <Setter Property="Margin" Value="5 10 5 0"/>
        </Style>
        <Style TargetType="Grid" x:Key="ButtonsGrid">
            <Setter Property="Margin" Value="25"/>
        </Style>
        <Style TargetType="Grid" x:Key="FormGrid">
            <Setter Property="Margin" Value="0 10"/>
        </Style>
        <Style TargetType="Window" x:Key="FormWindow">
            <Setter Property="Width" Value="450"/>
            <Setter Property="SizeToContent" Value="Height"/>
            <Setter Property="WindowStyle" Value="None"/>
        </Style>
    </Application.Resources>
</Application>